{
  "projectType": "application",
  "root": "apps/storybook",
  "sourceRoot": "apps/storybook/src",
  "prefix": "grorg",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/storybook",
        "index": "apps/storybook/src/index.html",
        "main": "apps/storybook/src/main.ts",
        "polyfills": "apps/storybook/src/polyfills.ts",
        "tsConfig": "apps/storybook/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/storybook/src/favicon.ico",
          "apps/storybook/src/assets"
        ],
        "styles": [
          "apps/storybook/src/assets/styles.scss",
          "libs/styles/src/lib/theme.scss",
          "libs/styles/src/lib/utils.scss"
        ],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": ["src/assets/styles", "libs/styles/src/lib"]
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/storybook/src/environments/environment.ts",
              "with": "apps/storybook/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "storybook:build:production"
        },
        "development": {
          "browserTarget": "storybook:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "storybook:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/storybook/src/**/*.ts",
          "apps/storybook/src/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/angular",
        "port": 4400,
        "config": {
          "configFolder": "apps/storybook/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/angular",
        "outputPath": "dist/storybook/storybook",
        "config": {
          "configFolder": "apps/storybook/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "apps/storybook/tsconfig.compodoc.json",
        "outputPath": "dist/compodoc/storybook",
        "workspaceDocs": true
      },
      "configurations": {
        "json": {
          "exportFormat": "json"
        }
      }
    }
  },
  "tags": []
}
